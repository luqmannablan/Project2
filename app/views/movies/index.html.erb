<p style="color: green"><%= notice %></p>

<% content_for :title, "Movies" %>

<h1>Movies</h1>

<div id="movies">
  <table>
    <thead>
      <tr>
        <th><%= link_to 'Title', movies_path(sort: 'title', direction: (@sort_column == 'title' && @sort_direction == 'asc') ? 'desc' : 'asc') %></th>
        <th><%= link_to 'Rating', movies_path(sort: 'rating', direction: (@sort_column == 'rating' && @sort_direction == 'asc') ? 'desc' : 'asc') %></th>
        <th><%= link_to 'Release Date', movies_path(sort: 'release_date', direction: (@sort_column == 'release_date' && @sort_direction == 'asc') ? 'desc' : 'asc') %></th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <%= render partial: "movie", locals: {movie: movie} %>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New movie", new_movie_path %>
